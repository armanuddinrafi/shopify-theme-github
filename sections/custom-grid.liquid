<section style=" background-color: #f0e2db;" class="page-width">
  <div class="container">
        <div class="content">
            <div class="heading">
                <h2>{{ section.settings.title }}</h2>
            </div>
            <div class="peragraph">
                <p>{{ section.settings.description }}</p>
            </div>
            <div class="morelink"><a href="">Shop Now</a></div>
        </div>

        <div class="img_view">
            <div class="imgDiva">
                <div class="img1">
                    <img height="400px" width="400px" src="{{ section.settings.image_view | image_url }}">
                </div>
            </div>

            <div class="imgDivb">
           
            </div>

        </div>
    </div>

</section>

<style>
  <style>
        .container {
            background-color: #f0e2db;
        }

        .content {
            text-align: center;
            width: 800px;
            margin: 0 auto;
            padding: 0 auto;
        }

        .img_view {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 10px;
        }

        div>.img1 .img2 {
            margin: 10px;
        }

        .img1 {
            margin: 10px;
            /* width: 100%; */
            /* height: 100%; */
        }

        .img2 {
            margin: 10px;
        }

        .imgDivb {
            width: 400px;
            height: 400px;
            background-color: white;
        }

        .imgDiva {
            width: 400px;
            height: 400px;
        }

        .morelink a {
            text-decoration: underline;
            text-underline-offset: 4px;
            transition-duration: 0.3s;
            transition-timing-function: ease-in-out;
            transition-delay: 0s;
            transition-property: all;
            width: -webkit-fit-content;
            width: -moz-fit-content;
            width: fit-content;
        }
    </style>
</style>

{% schema %}
  {
    "name": "Grid Item Image & product",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title Name"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit"
      },
      {
        "type": "image_picker",
        "id": "image_view",
        "label": "Image View"
        
      }
    ]
  }

{% endschema %}